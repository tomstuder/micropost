<h1>Listing tinyposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tinyposts.each do |tinypost| %>
      <tr>
        <td><%= tinypost.content %></td>
        <td><%= tinypost.user_id %></td>
        <td><%= link_to 'Show', tinypost %></td>
        <td><%= link_to 'Edit', edit_tinypost_path(tinypost) %></td>
        <td><%= link_to 'Destroy', tinypost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tinypost', new_tinypost_path %>
